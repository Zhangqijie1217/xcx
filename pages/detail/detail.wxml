<!-- detail.wxml -->
<view class="wrap">
  <view class='title'>{{info.title}}</view>
  <view class='cTime'>{{info.cTime}}</view>
  <view class='img'>
    <image class='in-img' src="{{info.img}}" mode="cover"></image>
  </view>
  <view>{{info.content}}</view>
  <view class='close' bindtap="closepage">返回</view>
</view>